function meuEscopo(){

    const form = document.querySelector('.form');
    
    let contador = 1;
    function recebeEventoForm (evento) {
        evento.preventDefault();
        console.log(`Form nao foi enviado ${contador}`);
        contador++
    }
    
    form.addEventListener('submit',recebeEventoForm);

};
meuEscopo();